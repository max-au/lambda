{erl_opts, [debug_info]}.
{deps, [argparse]}.

{shell, [
    {apps, [lambda]}
]}.

%% {dist_node, [{name, authority}]}.
{post_hooks, [{"(linux|darwin|solaris|freebsd|netbsd|openbsd)",
    escriptize,
    "cp \"$REBAR_BUILD_DIR/bin/lctl\" ./lctl"},
    {"win32",
        escriptize,
        "robocopy \"%REBAR_BUILD_DIR%/bin/\" ./ lctl* "
        "/njs /njh /nfl /ndl & exit /b 0"} % silence things
]}.

{escript_name, lctl}.
{escript_comment, "%%Lambda control utility\n"}.
{escript_emu_args, "%%! -start_epmd false -connect_all false -epmd_module lambda_discovery +swt low +sbt u +sbwt none +sbwtdcpu none +sbwtdio none -lambda bootspec {epmd,[authority]}\n"}.

{relx, [
    {release, {lambda, "0.1.0"}, [lambda]}
]}.

%% Keep only the logs of the last 5 runs
{ct_opts, [{keep_logs, 5}]}.

{dialyzer, [
    {warnings, [unknown]},
    {plt_extra_apps, [tools]}
]}.

{profiles,
    [
        {test, [{deps, [proper, erlperf]}]},
        {prod, [{relx, [{debug_info, keep}]}]}
    ]}.
